<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"

    tools:context="jp.ac.it_college.std.s14002.android.irresponsible.ResultScreen">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/congratulation"
        android:gravity="center"
        android:text="@string/result"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />


    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="78dp"
        android:text="@string/score"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/clear_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:layout_marginLeft="220dp"
        android:text="@string/clear_time"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:id="@+id/Exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear_time"
        android:layout_gravity="center"
        android:layout_marginLeft="220dp"
        android:text="@string/experiece_point"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />


</RelativeLayout>
